<Window title="Text Area Test" maximized="true"
    xmlns:bxml="http://pivot.apache.org/bxml"
    xmlns="org.apache.pivot.wtk">
    <windowStateListeners>
    function windowOpened(window) {
        textArea.text = "ABC\nDEF\nGHI\nJKL\nMNO\nPQ";
        textArea.setSelection(0, 0);
        textArea.requestFocus();
    }
    </windowStateListeners>

    <BoxPane orientation="vertical" styles="{padding:8}">
        <Border>
            <TextArea bxml:id="textArea" text="" preferredWidth="320"
                styles="{margin:8, backgroundColor:'#eeeeee', wrapText:true}">
                <textAreaContentListeners>
                function textChanged(textArea) {
                    if (typeof length !== 'undefined')
                        length.text="length = " + textArea.characterCount;
                }
                </textAreaContentListeners>

                <textAreaSelectionListeners>
                function selectionChanged(textArea, previousSelectionStart, previousSelectionLength) {
                    if (typeof selection !== 'undefined')
                        selection.text = "selection = " + textArea.selectionStart + ", " + textArea.selectionLength;
                }
                </textAreaSelectionListeners>
            </TextArea>
        </Border>

        <PushButton buttonData="Clear">
            <buttonPressListeners>
            function buttonPressed(button) {
                textArea.text = "";
            }
            </buttonPressListeners>
        </PushButton>

        <BoxPane orientation="horizontal">
            <Label bxml:id="length" text=""/>
            <Label text=";"/>
            <Label bxml:id="selection" text=""/>
        </BoxPane>

    </BoxPane>
</Window>
